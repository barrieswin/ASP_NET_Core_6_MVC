@*Using Model*@
@*Be careful! Must add DataAnnotations on the Models file*@

@model WebAppOceanShop.Models.TProduct

@{
    ViewData["Title"] = "商品清單 - 修改";
}

<h1>商品清單 - 修改</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @*Sets the "hidden" value of whit FId to edit*@
                @*BUG need to check if FId is valid*@
                 <input type="hidden" id="FId" name="FId" value="@Model.FId" />

                <div class="form-group">
                <label asp-for="FPid" class="control-label"></label>
                <input asp-for="FPid" class="form-control" name="FPid" />
                <span asp-validation-for="FPid" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control" name="FName" value="@Model.FName"/>
                <span asp-validation-for="FName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FDescription" class="control-label" ></label>
                    <textarea asp-for="FDescription" class="form-control" type="text" rows="3" name="FDescription" id="FDescription" value="@Model.FDescription"></textarea>
                    <span asp-validation-for="FDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FPrice" class="control-label" for="FPrice"></label>
                    <input asp-for="FPrice" class="form-control" type="text" name="FPrice" id="FPrice" value="@Model.FPrice" />
                    <span asp-validation-for="FPrice" class="text-danger"></span>
                </div>

                <p></p>

                <div class="form-group">
                   <button type="submit" class="btn btn-outline-primary">確定</button>
                   |
                    <a href="/Admin/Index" class="btn btn-outline-info">取消</a>
                </div>
            </form>
        </div>
    </div>

   @* must use this script for validation*@
@section scripts{
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
