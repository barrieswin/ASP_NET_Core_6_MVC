@*Using ViewModel IEnumerable*@
@model IEnumerable<WebAppOceanShop.ViewModel.TProductViewModel>

@{
    ViewData["Title"] = "商品清單";
}


<h3></h3>

 <h1>
        商品清單
        <a href="/Admin/Create" class="btn btn-outline-success btn-md float-right">
            新增
        </a>
        
 </h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    產品類別
                </th>
                <th>
                    產品編號
                </th>
                <th>
                    產品名稱
                </th>
                <th>
                    產品敘述
                </th>
                <th>
                    產品單價
                </th>
                <th>
                    圖片
                </th>

                <th>
                    修改商品
                </th>
                <th>
                    供應中
                </th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @{
                    foreach (var item in Model){
                        <tr>
                            <td>
                                @item.FId
                            </td>
                            <td>
                                @item.FCategory
                            </td>
                            <td>
                                @item.FPid
                            </td>
                            <td>
                                @item.FName
                            </td>
                            <td>
                                @item.FDescription
                            </td>
                            <td>
                                @item.FPrice
                            </td>
                            <td>
                                @{if(item.FImagePath != null){<img src="@Url.Content(item.FImagePath)" width="100" height="100" />
                                    }
                                    else{ <p>沒有A</p> }
                                    }
                            </td>

                            <td>
                                <span class="float-right">
                                    <a href="/Admin/Edit/@item.FId" class="btn btn-outline-primary btn-sm">修改</a> |
                                    <a href="/Admin/Delete/@item.FId" class="btn btn-outline-danger btn-sm">停售</a>
                                </span>
                            </td>

                             <td>
                                    <input class="check-box" disabled="disabled" type="checkbox" style="transform: scale(1.5)"
                                            @( (item.FIsActiveFlag) ? "checked" : "" )
                                    />
                            </td>


                        </tr>
                        }
              
            }

        </tbody>
    </table>